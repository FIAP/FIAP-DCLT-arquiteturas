{
  "name": "sistema-investimentos-monolitico",
  "version": "1.0.0",
  "description": "Sistema Monolítico de Investimentos - Projeto Educacional FIAP demonstrando arquitetura monolítica com frontend e backend integrados em Node.js",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "docker:build": "docker build -t sistema-investimentos .",
    "docker:run": "docker run -p 3000:3000 sistema-investimentos",
    "docker:compose": "docker-compose up -d",
    "docker:logs": "docker-compose logs -f app",
    "docker:stop": "docker-compose down"
  },
  "keywords": [
    "investimentos",
    "portfolio",
    "fiap",
    "educacional",
    "nodejs",
    "express",
    "monolito",
    "arquitetura",
    "backend",
    "frontend",
    "ejs",
    "bootstrap"
  ],
  "author": "FIAP - Arquitetura de Software",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "ejs": "^3.1.9",
    "sequelize": "^6.32.1",
    "pg": "^8.11.1",
    "pg-hstore": "^2.3.4",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.1",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "express-rate-limit": "^6.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fiap/sistema-investimentos-monolitico"
  },
  "bugs": {
    "url": "https://github.com/fiap/sistema-investimentos-monolitico/issues"
  },
  "homepage": "https://github.com/fiap/sistema-investimentos-monolitico#readme",
  "nodemonConfig": {
    "watch": [
      "src/"
    ],
    "ext": "js,ejs,json",
    "ignore": [
      "node_modules/",
      "logs/",
      "*.test.js"
    ]
  }
} 