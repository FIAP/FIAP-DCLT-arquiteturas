<%- include('layout/base', { body: `
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 text-center">
            <div class="card shadow-lg">
                <div class="card-body p-5">
                    <% if (error && error.status === 404) { %>
                        <i class="fas fa-search text-muted mb-4" style="font-size: 4rem;"></i>
                        <h1 class="display-6 fw-bold text-muted">404</h1>
                        <h3 class="mb-3">Página não encontrada</h3>
                        <p class="text-muted mb-4">
                            A página que você está procurando não existe ou foi movida.
                        </p>
                    <% } else { %>
                        <i class="fas fa-exclamation-triangle text-warning mb-4" style="font-size: 4rem;"></i>
                        <h1 class="display-6 fw-bold text-warning">Oops!</h1>
                        <h3 class="mb-3">Algo deu errado</h3>
                        <p class="text-muted mb-4">
                            <%= message || 'Ocorreu um erro inesperado. Tente novamente.' %>
                        </p>
                    <% } %>
                    
                    <div class="d-flex justify-content-center gap-3">
                        <a href="/" class="btn btn-primary">
                            <i class="fas fa-home me-2"></i>
                            Página Inicial
                        </a>
                        <button onclick="history.back()" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>
                            Voltar
                        </button>
                    </div>
                    
                    <% if (process.env.NODE_ENV === 'development' && error && error.stack) { %>
                        <hr class="my-4">
                        <div class="text-start">
                            <h6 class="text-danger">Stack Trace (Desenvolvimento):</h6>
                            <pre class="text-muted small"><%= error.stack %></pre>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>
` }) %> 